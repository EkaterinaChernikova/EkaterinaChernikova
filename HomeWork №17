using System;

namespace HomeWork
{
    class Program
    {
        static void Main(string[] args)
        {
            Random random = new Random();
            int randomNumber;
            int minNumber = 10;
            int maxNumber = 100;
            int finalValue = 2;
            int multipleTwo = 2;
            int degree = 1;

            randomNumber = random.Next(minNumber, maxNumber);

            while (finalValue <= randomNumber)
            {
                finalValue *= multipleTwo;
                degree++;
            }

            Console.WriteLine($"Случайное число: {randomNumber}\n" +
                $"Найденная наименьшая степень числа 2: {degree}\n" +
                $"Число 2 в степени {degree} = {finalValue}\n" +
                $"{finalValue} > {randomNumber}");
            Console.ReadKey();
        }
    }
}
