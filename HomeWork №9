using System;

namespace HomeWork
{
    class Program
    {
        static void Main(string[] args)
        {
            string userInput;
            string stopWord;

            userInput = "";
            stopWord = "exit";

            while (userInput != stopWord)
            {
                Console.WriteLine("Выйти из цикла?(напишите " + stopWord + ")");
                userInput = Console.ReadLine();
            }
        }
    }
}
