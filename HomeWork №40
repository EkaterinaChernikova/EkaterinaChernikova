using System;
using System.Collections.Generic;

namespace HomeWork_1
{
    class Program
    {
        static void Main(string[] args)
        {
            const string Command_AddPlayer = "1";
            const string Command_RemovePlayer = "2";
            const string Command_BanPlayer = "3";
            const string Command_UnbanPlayer = "4";
            const string Command_Exit = "5";

            Database database = new Database();
            bool isExit = false;
            string userInput;
            int totalId = 100;

            while (isExit == false)
            {
                Console.WriteLine("Список игроков: ");
                database.ShowList();
                Console.Write(
                    $"\n{Command_AddPlayer} - Добавить игрока. " +
                    $"\n{Command_RemovePlayer} - Удалить игрока. " +
                    $"\n{Command_BanPlayer} - Забанить игрока. " +
                    $"\n{Command_UnbanPlayer} - Разбанить игрока. " +
                    $"\n{Command_Exit} - Выход. " +
                    $"\n\nВаш ввод: ");
                userInput = Console.ReadLine();

                switch (userInput)
                {
                    case Command_AddPlayer:
                        database.AddPlayer(totalId++);
                        break;

                    case Command_RemovePlayer:
                        database.RemovePlayer();
                        break;

                    case Command_BanPlayer:
                        database.BanPlayer();
                        break;

                    case Command_UnbanPlayer:
                        database.UnbanPlayer();
                        break;

                    case Command_Exit:
                        isExit = true;
                        break;
                }

                Console.Clear();
            }
        }
    }

    class Player
    {
        private string _nickName;
        private int _level;
        private bool _isBanned;

        public Player(string nickName, int level, int id)
        {
            _nickName = nickName;
            _level = level;
            Id = id;
        }

        public int Id { get; private set; }

        public void ShowInfo()
        {
            Console.WriteLine($"Игрок - {_nickName} {_level} lv  \nУникальный номер - {Id}");

            if (_isBanned)
            {
                Console.WriteLine("Статус: забанен.");
            }
            else
            {
                Console.WriteLine("Статус: пока не забанен.");
            }
        }

        public void Ban()
        {
            _isBanned = true;
        }

        public void Unban()
        {
            _isBanned = false;
        }
    }

    class Database
    {
        private List<Player> _players = new List<Player>();

        public void AddPlayer(int id)
        {
            Console.Write("Введите ник - ");
            string nickName = Console.ReadLine();
            Console.Write("Укажите уровень - ");
            int level;
            
            while(int.TryParse(Console.ReadLine(), out level) == false)
            {
                Console.WriteLine("Неверный ввод.");
            }

            _players.Add(new Player(nickName, level, id));
        }

        public void RemovePlayer()
        {
            Console.Write("Введите id для удаления: ");

            if (TryGetPlayer(out Player player) == true)
            {
                _players.Remove(player);
            }
        }

        public void ShowList()
        {
            if (_players.Count > 0)
            {
                foreach (var player in _players)
                {
                    player.ShowInfo();
                }
            }
            else
            {
                Console.WriteLine("Список пуст.");
            }
        }

        public void BanPlayer()
        {
            Console.Write("Введите id чтобы забанить: ");

            if (TryGetPlayer(out Player player) == true)
            {
                player.Ban();
            }
        }

        public void UnbanPlayer()
        {
            Console.Write("Введите id чтобы разбанить: ");

            if (TryGetPlayer(out Player player) == true)
            {
                player.Ban();
            }
        }

        private bool TryGetPlayer(out Player player)
        {
            int id;

            while (int.TryParse(Console.ReadLine(), out id) == false)
                Console.WriteLine("Неверный ввод.");

            foreach (var person in _players)
            {
                if (person.Id == id)
                {
                    player = person;
                    return true;
                }
            }

            Console.WriteLine("Такого id не найдено.");
            player = null;
            return false;
        }
    }
}
