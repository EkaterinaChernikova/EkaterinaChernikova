using System;

namespace ConsoleApp1
{
    class Program
    {
        static void Main(string[] args)
        {
            int crystallPrize = 75;
            Console.WriteLine("Сколько у вас золота?");
            int gold = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine($"Кристаллы стоят {crystallPrize} золота, сколько хотите купить?");
            int crystall = Convert.ToInt32(Console.ReadLine());
            gold -= crystall * crystallPrize;
            Console.WriteLine($"У вас {gold} золота и {crystall} кристаллов");
            Console.ReadKey();
        }
    }
}
