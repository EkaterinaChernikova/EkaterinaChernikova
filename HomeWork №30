using System;

namespace HomeWork
{
    class Program
    {
        static void Main(string[] args)
        {
            int convertedNumber = 0;
            Console.WriteLine("Число успешно конвертировано: " + ParsingNumber(convertedNumber));
            Console.ReadKey();
        }

        static int ParsingNumber(int convertedNumber)
        {
            bool isParsed = false;
            string userInput = "";

            while (isParsed == false)
            {
                Console.Write("Введите число: ");
                userInput = Console.ReadLine();
                isParsed = int.TryParse(userInput, out convertedNumber);

                if (isParsed == false)
                {
                    Console.WriteLine("Конвертирование не удалось, повторите ввод.");
                    Console.ReadKey();
                    Console.Clear();
                }
            }
            return convertedNumber;
        }
    }
}
