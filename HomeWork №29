using System;

namespace HomeWork
{
    class Program
    {
        static void Main(string[] args)
        {
            int healthPercent = 10, maxHealth = 10;
            int manaPercent = 5, maxMana = 10;
     
            while (true)
            {
                DrawBar(healthPercent, maxHealth, 0, '#');
                DrawBar(manaPercent, maxMana, 1, '@');
     
                Console.SetCursorPosition(0, 3);
     
                Console.Write("Введите процент, на который изменится жизни: ");
                healthPercent += Convert.ToInt32(Console.ReadLine());
                Console.Write("Введите процент, на который изменится мана: ");
                manaPercent += Convert.ToInt32(Console.ReadLine());
     
                Console.ReadKey();
                Console.Clear();
            }
        }
     
        static void DrawBar(int percent, int maxValie, int position, char symbol = ' ')
        {
            string bar = "";
            int value = percent / maxValie;
            for(int i = 0; i < value; i++)
            {
                bar += symbol;
            }

            Console.SetCursorPosition(0, position);
            Console.Write('[');
            Console.Write(bar);
     
            bar = "";
     
            for(int i = value; i < maxValie; i++)
            {
                bar += '_';
            }
            Console.Write(bar + ']' + $" {percent}%");
        }
    }
 }
