using System;

namespace HomeWork
{
    class Program
    {
        static void Main(string[] args)
        {
            const string CommandSum = "sum";
            const string CommandExit = "exit";

            int[] numbers = new int[0];
            int[] temporaryNumbers = new int[0];

            string userInput;

            bool isExit = false;

            while (isExit == false)
            {
                Console.Clear();

                Console.Write($"Введите число или команду ({CommandSum} или {CommandExit}): ");
                userInput = Console.ReadLine();

                switch (userInput)
                {
                    case CommandSum:
                        int sum = 0;

                        for (int i = 0; i < numbers.Length; i++)
                        {
                            sum += numbers[i];
                        }

                        Console.WriteLine($"Сумма введенных чисел: {sum}");
                        sum = 0;
                        break;
                    case CommandExit:
                        isExit = true;
                        continue;
                    default:
                        temporaryNumbers = new int[numbers.Length + 1];

                        for (int i = 0; i < numbers.Length; i++)
                        {
                            temporaryNumbers[i] = numbers[i];
                        }

                        numbers = new int[temporaryNumbers.Length];

                        for(int i = 0; i < numbers.Length; i++)
                        {
                            numbers[i] = temporaryNumbers[i];
                        }

                        numbers[numbers.Length - 1] = Convert.ToInt32(userInput);
                        temporaryNumbers = new int[0];
                        break;
                }

                Console.Write("Введенные чиcла: ");

                for (int i = 0; i < numbers.Length; i++)
                {
                    Console.Write(numbers[i] + " ");
                }

                Console.ReadKey();
            }
        }
    }
}
