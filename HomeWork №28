using System;

namespace HomeWork
{
    class Program
    {
        static void Main(string[] args)
        {
            string[] persons = new string[0];
            string[] posts = new string[0];
            string userInput;
            uint listSize = 0;
            bool isExit = false;

            while (isExit == false)
            {
                Console.Clear();
                Console.WriteLine(
               "1. Добавить досье\n" +
               "2. Вывести все досье\n" +
               "3. Удалить досье\n" +
               "4. Поиск по фамилии\n" +
               "5. Выход\n"
               );
                Console.Write("Введите номер меню: ");

                userInput = Console.ReadLine();
                switch (userInput)
                {
                    case "1":
                        AddPerson(ref listSize, ref persons, ref posts);
                        break;
                    case "2":
                        PrintInfo(listSize, ref persons, ref posts);
                        break;
                    case "3":
                        RemowePerson(ref listSize, ref persons, ref posts);
                        break;
                    case "4":
                        Search(persons, posts, listSize);
                        break;
                    case "5":
                        isExit = true;
                        break;
                }
            }
        }

        static void AddPerson(ref uint listSize, ref string[] persons, ref string[] posts)
        {
            string firstName, secondName, lastName, post;
            Console.Write("\nВведите имя: ");
            firstName = Console.ReadLine();
            Console.Write("\nВведите фамилию: ");
            secondName = Console.ReadLine();
            Console.Write("\nВведите отчество: ");
            lastName = Console.ReadLine();
            Console.Write("\nВведите должность: ");
            post = Console.ReadLine();

            listSize++;
            ResizeList(listSize, ref persons, ref posts);

            persons[listSize - 1] = lastName + " " + firstName + " " + secondName;
            posts[listSize - 1] = post;
        }

        static void PrintInfo(uint listSize, ref string[] persons, ref string[] posts)
        {
            if (CheckList(listSize) == false)
                return;
            for (int i = 0; i < listSize; i++)
                Console.WriteLine($"{i + 1} - {persons[i]} - {posts[i]}");
            Console.ReadLine();
        }

        static void RemowePerson(ref uint listSize, ref string[] persons, ref string[] posts)
        {
            if (CheckList(listSize) == false)
                return;
            Console.Write("Введите порядковый номер из списка для удаления: ");
            int index = Convert.ToInt32(Console.ReadLine());
            for (int i = index - 1; i < listSize - 1; i++)
            {
                persons[i] = persons[i + 1];
                posts[i] = posts[i + 1];
            }
            listSize--;
            ResizeList(listSize, ref persons, ref posts);
        }

        static void Search(string[] persons, string[] posts, uint listSize)
        {
            if (CheckList(listSize) == false)
                return;
            Console.Write("Введите фамилию для поиска: ");
            string userInput = Console.ReadLine();
            string[] splitString = new string[3];
            for (int i = 0; i < persons.Length; i++)
            {
                splitString = persons[i].Split(' ');
                if (splitString[0] == userInput)
                {
                    Console.WriteLine($"{i + 1} - {persons[i]} - {posts[i]}");
                    break;
                }
            }
            Console.ReadKey();
        }

        static bool CheckList(uint listSize)
        {
            if (listSize == 0)
            {
                Console.WriteLine("Список пуст.");
                Console.ReadKey();
                return false;
            }
            return true;
        }

        static void ResizeList(uint listSize, ref string[] persons, ref string[] posts)
        {
            Array.Resize(ref persons, (int)listSize);
            Array.Resize(ref posts, (int)listSize);
        }
    }
}
